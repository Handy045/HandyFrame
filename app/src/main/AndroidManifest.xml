<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.handy.frame.app">

    <application
        android:name="com.handy.frame.base.FrameApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HFStyle_AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".module.start.StartActivity"
            android:exported="true"
            android:theme="@style/HFStyle_StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".module.guide.GuideActivity"
            android:theme="@style/HFStyle_FullScreenActivity" />

        <activity
            android:name=".module.login.LoginActivity"
            android:theme="@style/HFStyle_DefaultActivity" />

        <activity
            android:name=".module.main.MainActivity"
            android:theme="@style/HFStyle_DefaultActivity" />

        <activity
            android:name=".module.list.ListSimpleActivity"
            android:theme="@style/HFStyle_DefaultActivity" />

        <activity
            android:name=".module.list.ListMultistageActivity"
            android:theme="@style/HFStyle_DefaultActivity" />

        <activity
            android:name=".module.list.ListExpansionActivity"
            android:theme="@style/HFStyle_DefaultActivity" />

        <activity
            android:name=".module.list.ListSpinnerActivity"
            android:theme="@style/HFStyle_DefaultActivity" />

        <activity
            android:name=".module.detail.DetailActivity"
            android:theme="@style/HFStyle_DefaultActivity" />
    </application>

</manifest>